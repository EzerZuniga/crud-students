# ========================================
# Variables de Entorno - Configuración de la Aplicación
# ========================================
# Copia este archivo a .env y ajusta los valores según tu entorno

# Aplicación
APP_NAME="CRUD Students"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=America/Mexico_City

# Base de Datos
DB_DRIVER=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=crud_students
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Sesión (opcional, para futuras implementaciones)
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Logs
LOG_LEVEL=debug
LOG_MAX_FILES=30
