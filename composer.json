{
    "name": "jose/crud-students",
    "description": "Sistema de gestión de estudiantes con arquitectura MVC",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Controllers\\": "app/controllers/",
            "App\\Models\\": "app/models/",
            "App\\Core\\": "app/core/",
            "Tests\\": "tests/"
        },
        "files": [
            "app/helpers/functions.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:unit": "phpunit --testsuite='Unit Tests' --colors=always",
        "test:coverage": "phpunit --coverage-html coverage/",
        "test:filter": "phpunit --filter",
        "serve": "php -S localhost:8000 -t public",
        "post-autoload-dump": [
            "@php -r \"echo '✅ Autoload actualizado correctamente\\n';\""
        ]
    }
}
